<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ass3.axue2.posapplication">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.OrderActivity"
            android:label="@string/title_activity_order"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activities.PaymentActivity" />
        <activity android:name=".activities.DeliveryDetailsActivity" />
        <activity
            android:name=".activities.DeliveryManagerActivity"
            android:label="@string/title_activity_delivery_manager"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.Settings.SettingsActivity"
            android:label="Settings" />
        <activity
            android:name=".activities.Settings.SettingsNetworkActivity"
            android:label="Network Settings" />

        <activity android:name=".activities.Settings.SettingsGroupActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".activities.Settings.SettingsTableActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".activities.Settings.SettingsProductActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activities.Settings.SettingsDatabaseActivity" />
        <activity android:name=".activities.Settings.SettingsRestaurantActivity" />
        <activity android:name=".activities.Settings.SettingsDriverActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".activities.Settings.SettingsAboutActivity"></activity>
    </application>

</manifest>