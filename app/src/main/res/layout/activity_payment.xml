<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/payment_amount_due"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:text="Amount Due:"
        android:gravity="end"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/payment_paid"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:layout_below="@+id/payment_amount_due"
        android:gravity="end"
        android:text="Paid:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/payment_change"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:gravity="end"
        android:layout_below="@+id/payment_paid"
        android:text="Change"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/payment_subtotal"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:layout_above="@+id/payment_paid"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/payment_amount_due"
        android:text="$9999.99"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/payment_paid_amount"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:layout_above="@+id/payment_change"
        android:layout_below="@+id/payment_amount_due"
        android:layout_toEndOf="@+id/payment_paid"
        android:text="$9999.99"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/payment_change_amount"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:layout_above="@+id/payment_numberpad_8"
        android:layout_below="@+id/payment_paid"
        android:layout_toEndOf="@+id/payment_paid"
        android:text="$9999.99"
        android:textSize="18sp"/>



    <Button
        android:id="@+id/payment_numberpad_0"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/payment_numberpad_1"
        android:background="@color/colorPrimary"
        android:text="0"
        android:textColor="@color/WHITE"
        android:textSize="40sp" />

    <Button
        android:id="@+id/payment_numberpad_00"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/payment_numberpad_2"
        android:layout_toEndOf="@+id/payment_numberpad_1"
        android:background="@color/colorPrimary"
        android:text="00"
        android:textColor="@color/WHITE"
        android:textSize="40sp" />

    <Button
        android:id="@+id/payment_numberpad_decimal"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/payment_numberpad_3"
        android:layout_toEndOf="@+id/payment_numberpad_00"
        android:background="@color/colorPrimary"
        android:text="."
        android:textColor="@color/WHITE"
        android:textSize="40sp" />

    <Button
        android:id="@+id/payment_numberpad_1"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/payment_numberpad_4"
        android:background="@color/colorPrimary"
        android:text="1"
        android:textColor="@color/WHITE"
        android:textSize="40sp" />

    <Button
        android:id="@+id/payment_numberpad_2"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_below="@+id/payment_numberpad_5"
        android:layout_toEndOf="@+id/payment_numberpad_1"
        android:background="@color/colorPrimary"
        android:text="2"
        android:textColor="@color/WHITE"
        android:textSize="40sp" />

    <Button
        android:id="@+id/payment_numberpad_4"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/payment_numberpad_7"
        android:background="@color/colorPrimary"
        android:text="4"
        android:textColor="@color/WHITE"
        android:textSize="40sp" />

    <Button
        android:id="@+id/payment_numberpad_3"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_below="@+id/payment_numberpad_6"
        android:layout_toEndOf="@+id/payment_numberpad_2"
        android:background="@color/colorPrimary"
        android:text="3"
        android:textColor="@color/WHITE"
        android:textSize="40sp" />

    <Button
        android:id="@+id/payment_numberpad_5"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_below="@+id/payment_numberpad_8"
        android:layout_toEndOf="@+id/payment_numberpad_1"
        android:background="@color/colorPrimary"
        android:text="5"
        android:textColor="@color/WHITE"
        android:textSize="40sp" />

    <Button
        android:id="@+id/payment_numberpad_6"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_below="@+id/payment_numberpad_9"
        android:layout_toEndOf="@+id/payment_numberpad_5"
        android:background="@color/colorPrimary"
        android:text="6"
        android:textColor="@color/WHITE"
        android:textSize="40sp" />


    <Button
        android:id="@+id/payment_numberpad_7"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:background="@color/colorPrimary"
        android:text="7"
        android:textColor="@color/WHITE"
        android:textSize="40sp"
        android:layout_below="@+id/payment_change"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/payment_numberpad_8"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_below="@+id/payment_change"
        android:layout_toEndOf="@+id/payment_numberpad_7"
        android:background="@color/colorPrimary"
        android:text="8"
        android:textColor="@color/WHITE"
        android:textSize="40sp" />

    <Button
        android:id="@+id/payment_numberpad_9"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_below="@+id/payment_change"
        android:layout_toEndOf="@+id/payment_numberpad_8"
        android:background="@color/colorPrimary"
        android:text="9"
        android:textColor="@color/WHITE"
        android:textSize="40sp" />

    <Button
        android:id="@+id/payment_numberpad_back"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/payment_change"
        android:layout_toEndOf="@+id/payment_numberpad_9"
        android:background="@color/colorPrimary"
        android:text="bs"
        android:textColor="@color/WHITE"
        android:textSize="40sp" />

    <Button
        android:id="@+id/payment_numberpad_clear"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/payment_numberpad_back"
        android:layout_toEndOf="@+id/payment_numberpad_6"
        android:background="@color/colorPrimary"
        android:text="Clear"
        android:textColor="@color/WHITE"
        android:textSize="30sp" />

    <Button
        android:id="@+id/payment_payment_button"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/payment_numberpad_clear"
        android:layout_toEndOf="@+id/payment_numberpad_3"
        android:background="@color/colorAccent"
        android:text="Pay"
        android:textColor="@color/WHITE"
        android:textSize="40sp" />




</RelativeLayout>