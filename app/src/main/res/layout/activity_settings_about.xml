<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ass3.axue2.posapplication.activities.Settings.SettingsAboutActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="For Floating Action Buttons Animation, youtube tutorial used: https://www.youtube.com/watch?v=46gQrf2M5pU" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="25dp"
        android:text="JDBC is used to connect to network database" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:text="For JDBC Connection Factory and DAO, tutorial used from: https://ibytecode.com/blog/jdbc-examples-introduction/" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:text="For JDBC Connection Factory and DAO, tutorial used from: https://ibytecode.com/blog/jdbc-examples-introduction/" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please note that in order to use the network mode of the application you must have a MySQL Server running with the server's ip address set as : 192.168.56.1, username set as: root, password set as 123, and relevant tables created."
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />
</RelativeLayout>
