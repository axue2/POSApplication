<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ass3.axue2.posapplication.activities.Settings.SettingsNetworkActivity"

    android:background="@color/WHITE">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout">

        <Button
            android:id="@+id/settings_restaurant_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/WHITE"
            android:gravity="start|center_vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:stateListAnimator="@null"
            android:text="@string/network_mode" />

        <Switch
            android:id="@+id/network_mode_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/settings_restaurant_button"
            android:layout_alignBottom="@+id/settings_restaurant_button"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="40dp"
            android:checked="false"
            tools:checked="false" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/WHITE"
        android:paddingEnd="10dp"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:visibility="visible"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="382dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/network_ip_address_editText"
            android:layout_alignBottom="@+id/network_ip_address_editText"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/network_ip_address_editText"
            android:text="@string/ip_address" />

        <EditText
            android:id="@+id/network_ip_address_editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:ems="15"
            android:hint="@string/ip_address_hint"
            android:inputType="text"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/network_ip_address_editText"
            android:layout_marginTop="25dp"
            android:text="@string/database_name" />

        <EditText
            android:id="@+id/network_db_name_editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView4"
            android:layout_alignBottom="@+id/textView4"
            android:layout_alignParentEnd="true"
            android:ems="15"
            android:hint="@string/database_hint"
            android:inputType="text"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/network_db_name_editText"
            android:layout_marginTop="25dp"
            android:text="@string/username" />

        <EditText
            android:id="@+id/network_username_editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView5"
            android:layout_alignBottom="@+id/textView5"
            android:layout_alignParentEnd="true"
            android:ems="15"
            android:hint="@string/username_hint"
            android:inputType="text"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/network_username_editText"
            android:layout_marginTop="25dp"
            android:text="@string/password" />

        <EditText
            android:id="@+id/network_password_editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView6"
            android:layout_alignBottom="@+id/textView6"
            android:layout_alignParentEnd="true"
            android:ems="15"
            android:hint="@string/password_hint"
            android:inputType="text"
            android:textSize="12sp" />

    </RelativeLayout>

    <Button
        android:id="@+id/network_configuration_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/network_configuration_button"
        android:textColor="@color/WHITE"
        android:background="@color/settingsConfirmButton"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
