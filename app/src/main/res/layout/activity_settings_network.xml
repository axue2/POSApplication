<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ass3.axue2.posapplication.activities.SettingsNetworkActivity"
    android:orientation="vertical"
    android:background="@color/WHITE">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/settings_general_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/WHITE"
            android:gravity="start|center_vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:stateListAnimator="@null"
            android:text="Network Mode" />

        <Switch
            android:id="@+id/network_mode_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/settings_general_button"
            android:layout_alignBottom="@+id/settings_general_button"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="40dp"
            android:checked="false"
            tools:checked="false" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/WHITE"
        android:paddingTop="20dp"
        android:paddingStart="20dp"
        android:paddingEnd="10dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="382dp"
            android:layout_height="wrap_content"
            android:text="IP Address:"
            android:layout_alignBaseline="@+id/network_ip_address_editText"
            android:layout_alignBottom="@+id/network_ip_address_editText"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/network_ip_address_editText" />

        <EditText
            android:id="@+id/network_ip_address_editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:ems="15"
            android:hint="192.168.1.100"
            android:inputType="text"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/network_ip_address_editText"
            android:layout_marginTop="25dp"
            android:text="Database Name:" />

        <EditText
            android:id="@+id/network_db_name_editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView4"
            android:layout_alignBottom="@+id/textView4"
            android:layout_alignParentEnd="true"
            android:ems="15"
            android:hint="myDB"
            android:inputType="text"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/network_db_name_editText"
            android:layout_marginTop="25dp"
            android:text="Username:" />

        <EditText
            android:id="@+id/network_username_editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView5"
            android:layout_alignBottom="@+id/textView5"
            android:layout_alignParentEnd="true"
            android:ems="15"
            android:hint="root"
            android:inputType="text"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Password:"
            android:layout_below="@+id/network_username_editText"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/network_password_editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView6"
            android:layout_alignBottom="@+id/textView6"
            android:layout_alignParentEnd="true"
            android:ems="15"
            android:hint="123"
            android:inputType="text"
            android:textSize="12sp" />

    </RelativeLayout>

    <Button
        android:id="@+id/network_configuration_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="Set Network Configuration Settings" />

</LinearLayout>
