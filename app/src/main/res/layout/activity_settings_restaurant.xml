<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ass3.axue2.posapplication.activities.Settings.SettingsRestaurantActivity">

    <Button
        android:id="@+id/settings_restaurant_confirm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="@color/settingsButton"
        android:text="Confirm" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="28dp"
        android:text="Restaurant Name:" />

    <EditText
        android:id="@+id/settings_restaurant_name_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/settings_restaurant_al1"
        android:layout_marginTop="17dp"
        android:layout_toEndOf="@+id/textView7"
        android:ems="10"
        android:hint="My Restaurant"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address Line 1:"
        android:layout_alignBaseline="@+id/settings_restaurant_al1"
        android:layout_alignBottom="@+id/settings_restaurant_al1"
        android:layout_alignStart="@+id/textView7" />

    <EditText
        android:id="@+id/settings_restaurant_al1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/settings_restaurant_name_editText"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:hint="123 Fake St"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/settings_restaurant_al2"
        android:layout_alignBottom="@+id/settings_restaurant_al2"
        android:layout_alignStart="@+id/textView11"
        android:text="Address Line 2:" />

    <EditText
        android:id="@+id/settings_restaurant_al2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/settings_restaurant_al1"
        android:ems="10"
        android:hint="Fake Town"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/settings_restaurant_al3"
        android:layout_alignBottom="@+id/settings_restaurant_al3"
        android:layout_alignStart="@+id/textView12"
        android:text="Address Line 3:" />

    <EditText
        android:id="@+id/settings_restaurant_al3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/settings_restaurant_al2"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/settings_restaurant_postcode"
        android:layout_alignBottom="@+id/settings_restaurant_postcode"
        android:layout_alignStart="@+id/textView13"
        android:text="Postcode:" />

    <EditText
        android:id="@+id/settings_restaurant_postcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/settings_restaurant_al3"
        android:ems="10"
        android:hint="3333"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/settings_restaurant_phone"
        android:layout_alignBottom="@+id/settings_restaurant_phone"
        android:layout_alignStart="@+id/textView14"
        android:text="Phone:" />

    <EditText
        android:id="@+id/settings_restaurant_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/settings_restaurant_postcode"
        android:ems="10"
        android:hint="0433333333"
        android:inputType="textPersonName" />
</RelativeLayout>
