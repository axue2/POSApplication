<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/main_table_list_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/MainTableOpen">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <Button
                android:id="@+id/main_table_list_cv_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/PaymentButtonBackground"
                android:text="@string/table_payment_button"
                android:textColor="@color/PaymentButtonText"
                android:visibility="visible"
                android:layout_below="@+id/main_table_list_cv_total_text"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/main_table_list_cv_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/table_name_placeholder"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/main_table_list_cv_status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_below="@+id/main_table_list_cv_name_text"
                android:gravity="fill"
                android:text="@string/table_status_placeholder" />

            <TextView
                android:id="@+id/main_table_list_cv_guests_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center"
                android:text="@string/table_guests_placeholder"
                android:visibility="invisible"
                android:layout_below="@+id/main_table_list_cv_name_text"
                android:layout_toRightOf="@+id/main_table_list_cv_status_text"
                android:layout_toStartOf="@+id/main_table_list_cv_total_text"
                android:layout_toEndOf="@+id/main_table_list_cv_status_text"
                android:layout_toLeftOf="@+id/main_table_list_cv_total_text" />

            <TextView
                android:id="@+id/main_table_list_cv_total_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/main_table_list_cv_name_text"
                android:gravity="fill"
                android:text="@string/table_total_placeholder" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>

