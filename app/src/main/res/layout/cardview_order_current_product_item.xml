<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/order_current_list_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/border"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/border" />

        <Button
            android:id="@+id/order_minus_button"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="-"
            android:textSize="40dp"
            android:background="@drawable/border" />

        <Button
            android:id="@+id/order_plus_button"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:background="@drawable/border"
            android:text="+"
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <TextView
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:gravity="center" />

            <TextView
                android:id="@+id/order_current_product_name"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Add Product Here"
                android:textColor="@color/BLACK"/>

            <TextView
                android:id="@+id/order_current_product_price"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="TextView"
                android:textColor="@color/BLACK"/>

        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>

